<div id="message-<%= message.id %>" class="d-flex">
  <%= image_tag url_for(message.user.photo), class: "photo-chat" %>
  <div>
    <small>
      <strong><%= message.user.first_name %></strong>
      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    </small>
     <p><%= message.content %></p>
  </div>
</div>
