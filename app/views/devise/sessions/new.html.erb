<div class="d-flex flex-column align-items-center justify-content-center w-100 p-3 banner-forms">
  <div class="cardbox">
    <h2 class="text-center">Entrar</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: "Email:",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password, label: "Senha:",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Lembrar dados", as: :boolean if devise_mapping.rememberable? %>
      </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
          <%= f.button :submit, "Entrar", class: "btn-form" %>
          <%= link_to "Voltar", root_path %>
        </div>
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %>
    <% end %>
  </div>
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"></svg>
</div>
