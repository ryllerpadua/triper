<div class="d-flex flex-column align-items-center justify-content-center w-100 p-3 banner-forms">
  <div class="cardbox">

    <h2 class="text-center">Editar Perfil</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">

        <%= f.input :first_name, label: "Nome:",
                    required: true,
                    input_html: { autocomplete: "first_name" } %>
        <%= f.input :last_name, label: "Sobrenome:",
                    required: true,
                    input_html: { autocomplete: "last_name" } %>
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :date_of_birth, label: "Data de nascimento:",as: :string, required: false, input_html: {class: "datepicker", value: resource.date_of_birth.strftime("%d-%m-%Y")} %>
        <%= f.input :about,label: "Sobre:",
                    required: true,
                    input_html: { autocomplete: "about" } %>
        <%= f.input :occupation, label: "Ocupação:",
                    required: true,
                    input_html: { autocomplete: "occupation" } %>
        <%= f.input :city,
                    required: true, label: "Cidade:",
                    input_html: { autocomplete: "city" } %>
        <%= f.input :password, label: "Nova Senha:",
                    hint: "Deixe em branco caso não queira tocar de senha",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, label: "Confirme sua senha:",
                    hint: "Deixe em branco caso não queira tocar de senha",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password, label: "Senha atual:",
                    hint: "Confirme sua senha para salver alterações",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :photo, label: "Foto:", as: :file %>
      </div>
      <div class="d-flex justify-content-evenly align-items-center mt-4">
        <%= f.button :submit, "Salvar", class: "btn-form-save" %>
        <%= link_to "Voltar", dashboard_path %>
      </div>
      <div class="d-flex justify-content-center mt-4">
        <%= link_to "Cancelar conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete %>
      </div>
    <% end %>
    </div>
  </div>
</div>
