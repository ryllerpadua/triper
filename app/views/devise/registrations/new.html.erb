<div class="d-flex flex-column align-items-center justify-content-center w-100 p-3 banner-forms">
  <div class="cardbox">

    <h2 class="text-center mt-3 mb-3">Cadastre-se</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">

        <%= f.input :first_name, label: "Nome:",
                    required: true,
                    input_html: { autocomplete: "first_name" } %>
        <%= f.input :last_name, label: "Sobrenome:",
                    required: true,
                    input_html: { autocomplete: "last_name" } %>
        <%= f.input :date_of_birth, label: "Data de nascimento:", as: :string, required: true, input_html: {class: "datepicker"} %>
        <%= f.input :email, label: "Email:",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password, label: "Senha:",
                    required: true,
                    hint: ("#{@minimum_password_length} caractÃ©res no mÃ­nimo" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, label: "Confirme sua senha:",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :photo, label: "Foto:", as: :file %>

      </div>

      <div class="d-flex justify-content-between">
        <%= link_to "Voltar", root_path, class: "btn-form" %>
        <%= f.submit "Cadastrar", class: "btn-form" %>
      </div>
    <% end %>
  </div>
</div>
